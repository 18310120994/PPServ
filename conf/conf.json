{
    //应用名称
    "app_name" : "PPServ",
    "lang" : "zh_cn",
    "encoding" : "gbk",
    //启动服务延迟时间
    "service_delay" : 10,
    "service_wait_time" : 0.5,

    "module" : {
        "apache2.2.17" : {
            "service_name" : "PPapache",
            "group" : "apache",
            "path" : "bin\\apache\\apache2.2.17",
            "install" : "%sbin\\apache\\apache2.2.17\\bin\\httpd.exe -n PPapache -k install",
            "uninstall" : "%sbin\\apache\\apache2.2.17\\bin\\httpd.exe -k uninstall -n PPapache"
        },
        "php5.3.3" : {
            "group" : "php",
            "path" : "bin\\php\\php5.3.3"
        },
        "mysql5.5.8" : {
            "service_name" : "PPmysql",
            "group" : "mysql",
            "path" : "bin\\mysql\\mysql5.5.8",
            "install" : "%sbin\\mysql\\mysql5.5.8\\bin\\mysqld  --install PPmysql",
            "uninstall" : "%sbin\\mysql\\mysql5.5.8\\bin\\mysqld --remove PPmysql"
        },
        "memcached1.2.6" : {
            "service_name" : "PPmemcached",
            "group" : "memcached",
            "path" : "bin\\memcached\\memcached1.2.6",
            "install" : "sc create \"PPmemcached\" start= auto binPath= \"%sbin\\memcached\\memcached1.2.6\\memcached.exe -d runservice -m 32 -p 22122\" DisplayName= \"PPmemcached\"",
            "uninstall" : "sc delete \"PPmemcached\""
        }
    },
    "logging" : {
        "version" : 1,
        "disable_existing_loggers": true,
        "formatters": {
            "standard": {
                "format": "%(asctime)s - %(levelname)s - %(message)s",
                "datefmt" : "%Y-%m-%d %H:%M:%S"
            }
        },
        "handlers": {
            "file_handler": {
                "class": "logging.handlers.RotatingFileHandler",
                "level": "INFO",
                "formatter": "standard",
                "filename": "info.log",
                "maxBytes": 10485760,
                "backupCount": 20,
                "encoding": "utf8"
            },
            "console":{
                "class": "logging.StreamHandler",
                "level": "INFO"
            }
        },
        "loggers": {
            "main": {
                "level": "ERROR",
                "handlers": ["file_handler"],
                "propagate": "no"
            }
        },
        "root": {
            "level": "INFO",
            "handlers": ["file_handler"]
        }
    },
    "state_style" : {
        "RUNNING" : {
            "foreground" : "#CEF6EC"
        },
        "STOPPED" : {
            "foreground" : "black"
        },
        "UNKNOWN" : {
            "foreground" : "red",
            "background" : "yellow"
        },
        "STARTING" : {

        },
        "STOPPING":{

        }
    }
}